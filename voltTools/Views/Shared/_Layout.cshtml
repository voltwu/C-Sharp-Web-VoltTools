@model VoltTools.Models.Views.BaseView
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DavidTools</title>
    <link rel="shortcut icon" href="~/favicon.ico">
    <!-- Required Stylesheets -->
    <link type="text/css" rel="stylesheet" href="~/lib/css/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="~/lib/css/bootstrap-vue.css" />

    <!-- Load polyfills to support older browsers -->
    <script type="text/javascript" src="~/lib/js/polyfill.min.js"></script>

    <!-- Required scripts -->
    <script type="text/javascript" src="~/lib/js/vue.js"></script>
    <script type="text/javascript" src="~/lib/js/bootstrap-vue.js"></script>

    <link type="text/javascript" rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>
<body>
    @RenderSection("header", false)
    <div id="app">
        <b-container>
            <b-navbar toggleable="lg" type="dark" variant="info">
                <b-navbar-brand href="/" target="_self">David-Tools</b-navbar-brand>

                <b-navbar-toggle target="nav-collapse"></b-navbar-toggle>

                <b-collapse id="nav-collapse" is-nav>
                    <b-navbar-nav>
                        @Html.Raw(await Model.LoadNavigation())
                    </b-navbar-nav>
                </b-collapse>
            </b-navbar>
        </b-container>
    </div>
    <script>
        new Vue({
            el: "#app",
            data: {
            }
        });
    </script>

    @RenderBody()
    @{
        await Html.RenderPartialAsync("~/Views/Shared/footer.cshtml");
    }

    @RenderSection("footer", false)
</body>
</html>
